{
    "$id": "https://example.com/person.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "required": [
        "name",
        "gender"
    ],
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The person's name."
        },
        "age": {
            "description": "The person's age.",
            "type": "integer",
            "minimum": 0
        },
        "gender": {
            "description": "The person's gender",
            "type": "string",
            "enum": [
                "female",
                "male"
            ]
        },
        "home_address": {
            "$ref": "#/definitions/address"
        },
        "registered_address": {
            "$ref": "#/definitions/address"
        }
    },
    "definitions": {
        "address": {
            "type": "object",
            "properties": {
                "street_address": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "zip_code": {
                    "type": "string",
                    "minLength﻿": 5,
                    "maxLength﻿": 6
                }
            }
        }
    }
}
